// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id            String     @id @default(uuid())
  courseName    String
  details       String
  prerequisites String[]
  lessons       String[]
  quizes        String[]
  courseId      String
  isCompleted   Boolean[]
  student       Student[]
  instructor    Instructor @relation(fields: [instructorId], references: [id])
  instructorId  String
  videos        String[]
}

model Student {
  id       Int      @id @default(autoincrement())
  email    String
  passwrod String
  courses  Course[]
}

model Instructor {
  id      String   @id @default(uuid())
  name    String
  courses Course[]
}
